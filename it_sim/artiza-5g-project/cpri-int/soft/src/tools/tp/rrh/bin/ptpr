Rrh.require("./verbose")
Rrh.require("./input_check")

if ARGV.length < 1 then
 puts "usage:"+$0+" <addr>",
 "(m):<addr> is address"
 raise 
end

addr_s = ARGV[0]
if !Rrh.input_check(addr_s,4) then
 puts "Input value is incorrect : <addr>"
 raise 
end

Rrh.assign()
if !res = Rrh.ptpread( addr_s.to_i(16) ) then
 puts "read error"
else
 puts "0x#{res} "
end

Rrh.unassign()
